<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activityUser.user_recsettings">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Untuk mendapatkan rekomendasi yang sesuai untuk Anda, silahkan jawab beberapa pertanyaan berikut."
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/askCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pertanyaan 1 dari {jumlah total pertanyaan}."
            android:layout_marginBottom="10dp"/>

<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:padding="5dp"-->
<!--            android:text="Anda diminta untuk memilih salah satu dari kedua smartphone yang memiliki keunggulan dan kekurangan yang berbeda:"-->
<!--            android:textSize="16sp" />-->

<!--        <TextView-->
<!--            android:id="@+id/compareText"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:padding="5dp"-->
<!--            android:textAlignment="center"-->
<!--            android:textStyle="bold"-->
<!--            android:text="Smartphone dengan RAM tinggi dan harga tinggi \n\n dan \n\n Smartphone dengan RAM rendah dan harga rendah"-->
<!--            android:textSize="16sp" />-->


        <TextView
            android:id="@+id/qText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:padding="5dp"
            android:text="Seberapa tertarik Anda untuk memilih Smartphone dengan RAM tinggi dan harga tinggi?"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/p1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Sangat tidak tertarik"/>
            <Button
                android:id="@+id/p2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Kurang tertarik" />
            <Button
                android:id="@+id/p3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Netral" />
            <Button
                android:id="@+id/p4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Tertarik" />
            <Button
                android:id="@+id/p5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Sangat tertarik" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>